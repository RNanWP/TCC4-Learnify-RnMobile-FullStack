{
  "extends": "expo/tsconfig.base",
  "strict": true,
  "compilerOptions": {
    "target": "ESNext",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,
    "jsx": "react-native",
    "module": "esnext",
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "index.ts",
    "App.tsx",
    "**/*.ts",
    "**/*.tsx",
    "**/*.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "app.d.ts",
    "nativewind-env.d.ts",
    "types.d.ts"
  ],
  "exclude": ["node_modules", "babel.config.js", "metro.config.js"]
}
