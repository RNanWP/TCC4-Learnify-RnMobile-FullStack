{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "types": ["jest", "node"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": ["src/**/*", "jest.setup.ts"],
  "exclude": ["node_modules"]
}
